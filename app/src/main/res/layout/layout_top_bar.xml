<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/px8dp"
    android:gravity="center_vertical"
    android:background="@color/top_bar"
    android:paddingTop="@dimen/px40dp"
    >

    <LinearLayout
        android:id="@+id/back"
        android:paddingLeft="@dimen/px8dp"
        android:paddingRight="@dimen/px12dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_text_left"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="返回"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/customWhite"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="title"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/customWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_text_right1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="right1"
            android:textSize="@dimen/font_size_10sp"
            android:textColor="@color/customWhite"/>

        <TextView
            android:id="@+id/tv_text_right2"
            android:layout_marginLeft="10dp"
            android:layout_width="@dimen/px54dp"
            android:layout_height="@dimen/px46dp"
            android:gravity="center_vertical"
            android:text="right2"
            android:textSize="@dimen/font_size_10sp"
            android:textColor="@color/customWhite"/>
    </LinearLayout>

</LinearLayout>